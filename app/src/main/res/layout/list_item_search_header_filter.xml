<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="3dp">
    <LinearLayout
        android:id="@+id/llOutBoarder"
        android:background="@drawable/shape_search_filter_header_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/rl_search_button"
            android:background="@drawable/shape_search_filter_header_title_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="#666666"
                android:textSize="13sp"
                tools:text="款式"/>

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="10dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/filter_header_down1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>