<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingTop="5dp"
    android:orientation="vertical">
    <GridView
        android:id="@+id/gvContent"
        style="@style/SearchConditionGridView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintVertical_bias="0.5"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_sure"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="@drawable/shape_reset_rect_button"
        android:enabled="true"
        android:text="重置"
        android:textColor="#333333"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_clear"
        android:layout_weight="1"
        android:background="@drawable/selector_filterheader_confirm"
        android:enabled="true"
        android:text="确定"
        android:textColor="@drawable/selector_buy_button_text"
        android:textSize="17sp" />

</android.support.constraint.ConstraintLayout>